<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vogella.android.laundrynotification.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/introText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/intro_text"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/statusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/static_status"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/introText" />

    <TextView
        android:id="@+id/statusValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="TEST"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        app:layout_constraintLeft_toRightOf="@+id/statusLabel"
        app:layout_constraintTop_toBottomOf="@id/introText" />

    <Button
        android:id="@+id/statusOff_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_value_off"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/statusLabel"
        android:onClick="onClick" />

    <Button
        android:id="@+id/statusRunning_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_value_running"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/statusOff_button"
        android:onClick="onClick" />

    <Button
        android:id="@+id/statusFinished_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_value_finished"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/statusRunning_button"
        android:onClick="onClick" />


</android.support.constraint.ConstraintLayout>
